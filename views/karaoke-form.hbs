<h1>Karaoke Party!</h1>

<h2>Request form</h2>

<form action='/request' method='post'>
  <div class='mb-3'>
    <label for='singers' class='form-label'>Singers</label>
    <input
      type='text'
      class='form-control'
      id='singers'
      aria-describedby='singersHelp'
      name='singers'
    />
    <div id='singersHelp' class='form-text'>Enter the desired singers</div>
  </div>
  <div class='mb-3'>
    <label for='song' class='form-label'>Song</label>
    <input type='text' class='form-control' id='song' aria-describedby='songHelp' name='song' />
    <div id='songHelp' class='form-text'>Enter the desired song and artist</div>
  </div>
  <button type='submit' class='btn btn-success'>Submit</button>
</form>

{{#if errorMessage}}
  <p>{{errorMessage}}</p>
{{/if}}